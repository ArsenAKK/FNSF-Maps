<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fnsf_maps.ui.inicio.InicioFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.fnsf_maps.ui.contactos.ContactosFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.fnsf_maps.ui.mapa.MapaFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_informacoes"
        android:name="com.example.fnsf_maps.ui.Informacoes"
        android:label="@string/title_informacoes"
        tools:layout="@layout/fragment_informacoes" />

    <fragment
        android:id="@+id/navigation_definicoes"
        android:name="com.example.fnsf_maps.ui.Definicoes"
        android:label="@string/title_definicoes"
        tools:layout="@layout/fragment_definicoes" />
</navigation>