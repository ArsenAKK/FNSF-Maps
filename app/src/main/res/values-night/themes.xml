<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Set the desired height here -->
        <item name="actionBarSize">68dp</item>
        <!-- Keep the ActionBar background black -->
        <item name="android:background">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.FNSFMaps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Apply the custom ActionBar theme -->
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
        <!-- Primary brand color. These might still be needed for other UI elements -->
        <item name="colorPrimary">@color/azul_200</item>
        <item name="colorPrimaryVariant">@color/azul_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Explicitly set the status bar color -->
        <item name="android:statusBarColor">@color/azul_200</item>
        <!-- Customize the theme for dark mode here. -->
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>