<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Set the desired height here -->
        <item name="actionBarSize">68dp</item>
        <!-- Keep the ActionBar background black -->
        <item name="android:background">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.FNSFMaps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Apply the custom ActionBar theme -->
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
        <!-- Primary brand color. These might still be needed for other UI elements -->
        <item name="colorPrimary">@color/azul_200</item>
        <item name="colorPrimaryVariant">@color/azul_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black_darker</item>
        <!-- Explicitly set the status bar color -->
        <item name="android:statusBarColor">@color/azul_200</item>
        <!-- Customize the theme for dark mode here. -->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="ImageCaptionText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="ImageLayout">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LinearLayoutScroll">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">?attr/colorOnSecondary</item>
    </style>

    <style name="LinearLayoutTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:fontFamily">@font/poppins_bold_italic</item>
    </style>

    <style name="HorizontalScrollView">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayoutImagens">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/colorOnSecondary</item>
    </style>

    <style name="LinearLayoutImagem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/colorOnSecondary</item>
    </style>

    <style name="TitleFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="ContactoTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">15dp</item>
    </style>

    <style name="ContactoCardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ContactoLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="ContactoEmailPhone">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="SettingTittle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="LayoutLocalidadesCuriosidades">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextoLocalidadesCuriosidades">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>