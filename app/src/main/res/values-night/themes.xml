<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FNSFMaps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Apply the custom ActionBar theme -->
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_200</item>
        <item name="colorPrimaryVariant">@color/azul_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize the theme for dark mode here. -->
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>