<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Applies in AndroidManifest.xml -->
    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Set the desired height here -->
        <item name="actionBarSize">68dp</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.FNSFMaps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Apply the custom ActionBar theme -->
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/azul_200</item>
        <item name="colorOnPrimary">@color/azul_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/azul_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize the theme for light mode here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>