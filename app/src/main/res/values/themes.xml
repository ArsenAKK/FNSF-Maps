<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Applies in AndroidManifest.xml -->
    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Set the desired height here -->
        <item name="actionBarSize">68dp</item>
        <!-- Override colorPrimary here -->
        <item name="android:background">@color/white</item>  <!-- ONLY ActionBar background -->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.FNSFMaps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Apply the custom ActionBar theme -->
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_200</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/white</item> <!-- Explicitly set activity background -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>  <!-- Explicitly set status bar color -->
    </style>
</resources>